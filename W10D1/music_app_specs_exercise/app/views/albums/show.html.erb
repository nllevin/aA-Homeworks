<h1>Album: <%= @album.title %></h1>
<h3>Band: <%= @band.name %></h3>
<h3>Year: <%= @album.year %></h3>
<h3>Recorded <%= @album.live? ? "live" : "in the studio" %></h3>
<h3>Tracks:</h3>
<ol>
  <% @album.tracks.each do |track| %>
  <li><%= link_to "#{track.title}", track_url(track.id) %></li>
  <% end %>
</ol>

<%= button_to "Add a track!", new_album_track_url(@album.id), method: :get %>
<%= button_to "Edit album", edit_album_url(@album.id), method: :get %>
<%= button_to "Remove album", album_url(@album.id), method: :delete %>
<%= button_to "Back to band: #{@band.name}", band_url(@band.id), method: :get %>